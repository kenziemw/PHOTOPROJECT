<!-- gallery.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gallery | Captured Moments</title>
    <style>
        body {
            font-family: 'Georgia', serif;
            color: #333;
            background-color: #fff;
        }
        .gallery-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 1rem;
            max-width: 1200px;
            margin: 2rem auto;
            padding: 1rem;
        }
        .gallery-image {
            width: 100%;
            height: auto;
            border-radius: 5px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            object-fit: cover;
            transition: transform 0.3s ease;
        }
        .gallery-image:hover {
            transform: scale(1.05);
        }
    </style>
</head>
<body>
    <div class="gallery-grid">
        <img src="/images/photo1.jpg" alt="Gallery Image 1" class="gallery-image">
        <img src="/images/photo2.jpg" alt="Gallery Image 2" class="gallery-image">
        <img src="/images/photo3.jpg" alt="Gallery Image 3" class="gallery-image">
        <img src="/images/photo4.jpg" alt="Gallery Image 4" class="gallery-image">
        <img src="/images/photo5.jpg" alt="Gallery Image 5" class="gallery-image">
    </div>
</body>
</html>
